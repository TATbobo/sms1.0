<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app01.dao.Grade">
<!-- 查询所有学生信息 -->
  <select id="findAll" resultType="com.briup.app01.bean.Grade">
    select * from poll.poll_grade
  </select>
  <select id="findById" parameterType="long" resultType="com.briup.app01.bean.Grade">
    select * from poll.poll_grade where id=#{id}
  </select>
   <delete id="deleteById" parameterType="long" >
  delete from poll.poll_grade where id = #{id}
</delete>
 <insert id="insert"  parameterType="com.briup.app01.bean.Grade">
 	insert into poll.poll_grade values(null,#{name},#{description})
 </insert>
 <update id="update" parameterType="com.briup.app01.bean.Grade">
 	update poll.poll_grade
 	set name=#{name},description=#{description}
 	where id=#{id}
 </update>
</mapper>