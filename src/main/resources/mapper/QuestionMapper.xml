<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app01.dao.QuestiontMapper">
<!-- 查询所有学生信息 -->
  <select id="findAll" resultType="com.briup.app01.bean.Question">
    select * from poll.question_poll
  </select>
  <select id="findById" parameterType="long" resultType="com.briup.app01.bean.Question">
    select * from poll.question_poll where id=#{id}
  </select>
   <delete id="deleteById" parameterType="long" >
  delete from poll.question_poll where id = #{id}
</delete>
 <insert id="insert"  parameterType="com.briup.app01.bean.Question">
 	insert into poll.question_poll values(null,#{name},#{questiontype})
 </insert>
 <update id="update" parameterType="com.briup.app01.bean.Question">
 	update poll.question_poll
 	set name=#{name},questiontype=#{questiontype}
 	where id=#{id}
 </update>
</mapper>